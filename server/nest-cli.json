{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "root": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "./**/i18n/**/*",
                "watchAssets": true
            },
            {
                "include": "**/*.ejs"
            }
        ]
    },
    "generateOptions": {
        "spec": false
    }
}
